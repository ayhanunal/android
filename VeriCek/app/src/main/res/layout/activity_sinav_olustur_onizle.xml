<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SinavOlusturOnizleActivity">

    <TextView
        android:id="@+id/onizleSinavSureText"
        android:layout_width="370dp"
        android:layout_height="20dp"
        android:layout_marginStart="21dp"
        android:layout_marginEnd="21dp"
        android:text="Sınav Suresi :"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/onizleSinavAdiText" />

    <TextView
        android:id="@+id/onizleSinavAdiText"
        android:layout_width="370dp"
        android:layout_height="20dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="21dp"
        android:text="Ders Adı :"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/onizleSinavDurumText"
        android:layout_width="370dp"
        android:layout_height="20dp"
        android:layout_marginStart="21dp"
        android:layout_marginEnd="21dp"
        android:text="Sınav Durumu :"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/onizleSinavSureText" />

    <Button
        android:id="@+id/button3"
        android:layout_width="205dp"
        android:layout_height="36dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="103dp"
        android:onClick="katilimciDuzenle"
        android:text="Katılımcıları Düzenle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/onizleSinavDurumText" />

    <ListView
        android:id="@+id/sinavOnizleListView"
        android:layout_width="395dp"
        android:layout_height="419dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button3" />

    <Button
        android:id="@+id/button4"
        android:layout_width="202dp"
        android:layout_height="38dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="105dp"
        android:layout_marginBottom="16dp"
        android:onClick="sinavKaydet"
        android:text="Sınavı Kaydet"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/_dynamic" />
</androidx.constraintlayout.widget.ConstraintLayout>