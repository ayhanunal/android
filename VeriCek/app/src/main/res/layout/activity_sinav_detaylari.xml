<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SinavDetaylariActivity">

    <Button
        android:id="@+id/sinavDetaySinavGrupButton"
        android:layout_width="122dp"
        android:layout_height="40dp"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="16dp"
        android:onClick="sinavSonuclari"
        android:text="Öğrenci Sonuçları"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sinavDetaySinavAktButton"
        app:layout_constraintTop_toTopOf="@+id/sinavDetaySinavSilButton" />

    <Button
        android:id="@+id/sinavDetaySinavSilButton"
        android:layout_width="122dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="4dp"
        android:onClick="sinavSil"
        android:text="Sınavı Sil"
        android:textSize="10sp"
        app:layout_constraintEnd_toStartOf="@+id/sinavDetaySinavAktButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sinavDetaySinavSureText" />

    <TextView
        android:id="@+id/sinavDetaySinavKullaniciText"
        android:layout_width="295dp"
        android:layout_height="21dp"
        android:layout_marginStart="59dp"
        android:layout_marginEnd="58dp"
        android:gravity="center"
        android:text="Kullanıcı Sayısı :"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sinavDetaySinavSureText" />

    <TextView
        android:id="@+id/sinavDetaySinavDurumText"
        android:layout_width="291dp"
        android:layout_height="18dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:gravity="center"
        android:text="Sınav Durumu :"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sinavDetaySinavAdiText" />

    <TextView
        android:id="@+id/sinavDetaySinavSureText"
        android:layout_width="289dp"
        android:layout_height="22dp"
        android:layout_marginStart="61dp"
        android:layout_marginEnd="61dp"
        android:gravity="center"
        android:text="Sınav Süresi :"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sinavDetaySinavDurumText" />

    <TextView
        android:id="@+id/sinavDetaySinavAdiText"
        android:layout_width="293dp"
        android:layout_height="18dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:gravity="center"
        android:text="Sınav Adı :"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/sinavDetayListView"
        android:layout_width="418dp"
        android:layout_height="438dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/sinavDetaySinavAktButton" />

    <Button
        android:id="@+id/sinavDetaySinavAktButton"
        android:layout_width="122dp"
        android:layout_height="40dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="7dp"
        android:onClick="sinavDurumDegis"
        android:text="Aktifleştir"
        android:textSize="10sp"
        app:layout_constraintEnd_toStartOf="@+id/sinavDetaySinavGrupButton"
        app:layout_constraintStart_toEndOf="@+id/sinavDetaySinavSilButton"
        app:layout_constraintTop_toTopOf="@+id/sinavDetaySinavSilButton" />
</androidx.constraintlayout.widget.ConstraintLayout>