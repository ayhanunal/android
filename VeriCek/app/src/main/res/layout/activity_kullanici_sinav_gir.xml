<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KullaniciSinavGir">

    <TextView
        android:id="@+id/kullaniciSinavGirBilgiText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="7dp"
        android:text="Uygun sınavlar listelenmiştir. Girmek istediğiniz sınavı seçin"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/kullaniciSinavGirListView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/KullaniciSinavGirBaslatButton"
        android:layout_width="164dp"
        android:layout_height="47dp"
        android:layout_marginBottom="16dp"
        android:onClick="sinavaGit"
        android:text="Sınava Git"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kullaniciSinavGirListView" />

    <ListView
        android:id="@+id/kullaniciSinavGirListView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="9dp"
        app:layout_constraintBottom_toTopOf="@+id/KullaniciSinavGirBaslatButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kullaniciSinavGirBilgiText" />
</androidx.constraintlayout.widget.ConstraintLayout>